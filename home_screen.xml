<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topSection"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/notifications"
            android:id="@+id/notifications"
            android:background="#00000000"
            android:tint="#FFAC00"
            android:layout_weight="3" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#00000000"
            android:onClick="onSettingsClick"
            android:tint="@color/colorBlueGray"
            app:srcCompat="@drawable/settings" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topTextSection"
        android:paddingBottom="10dp"
        android:padding="10dp">

        <TextView
            android:text="Coming Soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notificText"
            android:textStyle="normal|bold|italic"
            android:textSize="20sp"
            android:layout_weight="2" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:text="More"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsText"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_weight="2"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleSection"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/alert"
            android:id="@+id/alert"
            android:layout_weight="1"
            android:background="#00000000"
            android:onClick="onAlertClick"
            android:tint="@color/colorRed"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explanation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleTextSection"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:text="Alert!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alertText"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="@color/colorDarkRed" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomSection"
        android:padding="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/check"
            android:id="@+id/check"
            android:layout_weight="1"
            android:background="#00000000"
            android:tint="@color/colorGreen" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/power"
            android:id="@+id/power"
            android:layout_weight="1"
            android:background="#00000000"
            android:paddingLeft="25dp"
            android:tint="#53BBF4" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botTextSection"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:padding="10dp">

        <TextView
            android:text="OK for now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkText"
            android:textStyle="normal|bold|italic"
            android:textSize="20sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:text="I'm 100% Safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/powerText"
            android:textStyle="normal|bold"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/minsLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlueGray"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>
